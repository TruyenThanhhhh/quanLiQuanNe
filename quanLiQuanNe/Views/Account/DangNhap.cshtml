@model quanLiQuanNe.Models.nguoiDung

@{
    Layout = "~/Views/Shared/_Layout_Account.cshtml";
    ViewData["Title"] = "Đăng nhập";
}

<style>
    body {
        background: linear-gradient(to right, #fffce0, #ffe4e1);
    }

    .login-box {
        max-width: 420px;
        margin: 80px auto;
        padding: 40px;
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
    }

    .login-title {
        text-align: center;
        font-weight: bold;
        font-size: 1.6rem;
        margin-bottom: 25px;
        color: #333;
    }

    .form-control {
        border-radius: 12px;
        padding: 12px 15px;
        font-size: 1rem;
    }

    .btn-login {
        background: linear-gradient(to right, #28a745, #218838);
        border: none;
        padding: 12px;
        border-radius: 12px;
        font-weight: bold;
        font-size: 1rem;
    }

    .form-footer {
        text-align: center;
        margin-top: 20px;
    }

        .form-footer a {
            color: #007bff;
            text-decoration: none;
            font-weight: 500;
        }

            .form-footer a:hover {
                text-decoration: underline;
            }

    .logo {
        display: block;
        margin: 0 auto 20px;
        width: 60px;
    }
</style>

<div class="login-box">
    <img src="~/images/logo.png" class="logo" alt="Logo" />
    <h2 class="login-title">Chào mừng bạn quay lại</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <form asp-controller="Account" asp-action="DangNhap" method="post">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label asp-for="userName" class="form-label">Tên đăng nhập</label>
            <input asp-for="userName" class="form-control" placeholder="e.g. yourusername" />
            <span asp-validation-for="userName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="passWord" class="form-label">Mật khẩu</label>
            <input asp-for="passWord" type="password" class="form-control" placeholder="e.g. yourpassword123" />
            <span asp-validation-for="passWord" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-login w-100">Đăng nhập</button>
    </form>

    <div class="form-footer">
        <p>Chưa có tài khoản? <a asp-action="DangKy" asp-controller="Account">Đăng ký ngay</a></p>
       
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
