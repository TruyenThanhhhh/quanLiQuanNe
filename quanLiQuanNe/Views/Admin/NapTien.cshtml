@model quanLiQuanNe.Models.nguoiDung

@{
    ViewData["Title"] = "Nạp tiền";
}

<style>
    .nap-card {
        border-radius: 20px;
        background: #fff;
        padding: 30px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        max-width: 500px;
    }

    .nap-title {
        font-weight: 700;
        font-size: 1.5rem;
        color: #28a745;
    }

    .nap-btn {
        padding: 12px 20px;
        font-size: 1.1rem;
        border-radius: 12px;
    }

    .nap-btn-secondary {
        background-color: #ccc;
        color: #333;
    }

        .nap-btn-secondary:hover {
            background-color: #bbb;
        }

    .form-label {
        font-weight: 600;
    }
</style>

<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="nap-card">
        <h2 class="nap-title text-center mb-4">💰 Nạp tiền cho: <br /><strong>@Model.hoTen</strong> (@Model.userName)</h2>

        <form asp-action="NapTien" method="post">
            <input type="hidden" name="id" value="@Model.Id" />

            <div class="mb-3">
                <label class="form-label">Số tiền muốn nạp (VNĐ):</label>
                <input type="number" class="form-control" name="soTien" required min="1000" placeholder="Nhập số tiền, VD: 20000" />
            </div>

            <div class="d-grid gap-2 mt-4">
                <button type="submit" class="btn btn-success nap-btn">💸 Xác nhận nạp</button>
                <a asp-action="Index" class="btn nap-btn nap-btn-secondary">← Quay lại</a>
            </div>
        </form>
    </div>
</div>
