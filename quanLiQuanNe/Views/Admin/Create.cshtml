@model quanLiQuanNe.Models.nguoiDung

<h2>Thêm người dùng mới</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="userName">Tên đăng nhập</label>
        <input type="text" class="form-control" id="userName" name="userName" required />
    </div>
    <div class="form-group">
        <label for="passWord">Mật khẩu</label>
        <input type="password" class="form-control" id="passWord" name="passWord" required />
    </div>
    <div class="form-group">
        <label for="hoTen">Họ và tên</label>
        <input type="text" class="form-control" id="hoTen" name="hoTen" required />
    </div>
    <div class="form-group">
        <label for="sdt">Số điện thoại</label>
        <input type="text" class="form-control" id="sdt" name="sdt" required />
    </div>
    <div class="form-group">
        <label for="isAdmin">Quyền admin</label>
        <input type="checkbox" class="form-control" id="isAdmin" name="isAdmin" />
    </div>
    <div class="form-group">
        <label for="soDu">Số dư</label>
        <input type="number" class="form-control" id="soDu" name="soDu" />
    </div>

    <button type="submit" class="btn btn-primary">Lưu người dùng</button>
    <a href="javascript:history.back()" class="btn btn-secondary">Quay lại</a>
</form>
