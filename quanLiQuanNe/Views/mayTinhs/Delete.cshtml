@model quanLiQuanNe.Models.mayTinh

@{
    ViewData["Title"] = "Xóa máy tính";
}

<style>
    .card-delete {
        border-radius: 20px;
        background: #ffffff;
        padding: 30px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        max-width: 550px;
    }

    .btn-custom {
        padding: 10px 20px;
        font-size: 1.1rem;
        border-radius: 10px;
    }

    .form-label {
        font-weight: 600;
    }

    .details-list {
        list-style: none;
        padding: 0;
    }

    .details-list li {
        margin-bottom: 15px;
        padding: 10px;
        background: #f8f9fa;
        border-radius: 8px;
    }
</style>

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card-delete">
        <h2 class="text-center text-danger mb-4">⚠️ Xóa máy tính</h2>
        <h3 class="text-center mb-4">Bạn có chắc chắn muốn xóa máy này?</h3>

        <ul class="details-list">
            <li>
                <strong>Tên máy:</strong>
                <span>@Html.DisplayFor(model => model.name)</span>
            </li>
            <li>
                <strong>Trạng thái:</strong>
                <span>@Html.DisplayFor(model => model.trangThai)</span>
            </li>
            <li>
                <strong>Đơn giá:</strong>
                <span>@Html.DisplayFor(model => model.donGia) VNĐ/giờ</span>
            </li>
        </ul>

        <form asp-action="Delete" class="mt-4">
            <input type="hidden" asp-for="id" />
            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-danger btn-custom">🗑️ Xóa máy</button>
                <a asp-action="Index" class="btn btn-secondary btn-custom">← Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>
