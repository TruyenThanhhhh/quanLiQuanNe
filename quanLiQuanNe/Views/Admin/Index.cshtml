@{
    ViewData["Title"] = "Quản lý Quán Net";
}

<style>
    body {
        background: linear-gradient(to right, #fefcea, #f1daff);
    }

    .admin-card {
        border-radius: 25px;
        background: #ffffff;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
        padding: 40px;
    }

    .admin-title {
        font-weight: 700;
        font-size: 1.8rem;
        color: #0077cc;
    }

    .admin-subtitle {
        color: #666;
        font-size: 1rem;
        margin-bottom: 30px;
    }

    .admin-btn {
        font-size: 1.1rem;
        padding: 14px;
        border-radius: 15px;
        transition: transform 0.2s ease;
    }

        .admin-btn:hover {
            transform: scale(1.03);
        }

    .section-divider {
        border-top: 2px dashed #ccc;
        margin: 30px 0;
    }
</style>

<div class="container mt-5">
    <div class="admin-card mx-auto" style="max-width: 900px;">
        <h2 class="text-center admin-title">👋 Chào mừng Quản Trị Viên: <strong>@ViewBag.UserName</strong></h2>
        <p class="text-center admin-subtitle">Trang quản lý hệ thống quán net. Bạn có thể kiểm tra và quản lý các hoạt động tại đây.</p>

        <hr class="section-divider" />

        <!-- Chức năng chính -->
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <a class="btn btn-primary admin-btn w-100 shadow" asp-controller="Admin" asp-action="Index1">
                    📋 Quản lý người dùng
                </a>
            </div>
            <div class="col-md-4 mb-4">
                <a class="btn btn-info text-white admin-btn w-100 shadow" asp-controller="mayTinhs" asp-action="Index">
                    💻 Quản lý thiết bị
                </a>
            </div>
            <div class="col-md-4 mb-4">
                <a class="btn btn-success admin-btn w-100 shadow" asp-controller="suDungMays" asp-action="Index">
                    📊 Báo cáo & Thống kê
                </a>
            </div>
        </div>

        <hr class="section-divider" />

        <!-- Quản lý tài chính -->
        <div class="row text-center">
            <div class="col-12">
                <a class="btn btn-outline-warning admin-btn fw-bold w-100 shadow" asp-controller="suDungMays" asp-action="ThongKe">
                    📈 Thống kê doanh thu (sử dụng máy)
                </a>
            </div>
        </div>
    </div>
</div>
