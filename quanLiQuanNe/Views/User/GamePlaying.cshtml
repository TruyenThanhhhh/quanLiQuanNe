@model quanLiQuanNe.Models.GamePlayingViewModel

@{
    ViewData["Title"] = "Đang chơi game";
}

<div class="container">
    <h1 class="text-center my-4">Đang chơi game</h1>

    @if (Model != null && Model.SuDungMay != null)
    {
        <div class="card mb-4">
            <div class="card-header bg-success text-white">
                <h5 class="card-title mb-0">Thông tin phiên chơi game</h5>
            </div>
            <div class="card-body">
                <p><strong>Máy tính:</strong> @Model.TenMay</p>
                <p><strong>Thời gian bắt đầu:</strong> @Model.SuDungMay.thoiGianBatDau.ToString("dd/MM/yyyy HH:mm:ss")</p>
                <p><strong>Đơn giá:</strong> @Model.DonGia VNĐ/giờ</p>
            </div>
        </div>

        <h3 class="text-center my-4">Chọn trò chơi</h3>
        <div class="row">
            @foreach (var game in Model.Games)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-primary text-white">
                            <h5 class="card-title mb-0">@game.Name</h5>
                        </div>
                        <div class="card-body d-flex flex-column">
                            <p class="card-text">@game.Description</p>
                            <form asp-action="SelectGameToPlay" method="post" class="mt-auto">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="gameId" value="@game.Id" />
                                <button type="submit" class="btn btn-primary w-100">Chơi game này</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="row mt-4">
            <div class="col-12 text-center">
                <form asp-action="Logout" asp-controller="User" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">Kết thúc và đăng xuất</button>
                </form>
            </div>
        </div>
    }
    else
    {
        <p>Không tìm thấy thông tin phiên chơi game.</p>
        <a asp-action="GameSelection" asp-controller="User" class="btn btn-primary">Quay lại chọn máy</a>
    }
</div>