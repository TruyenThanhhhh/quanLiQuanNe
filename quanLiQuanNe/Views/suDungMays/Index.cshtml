@model quanLiQuanNe.ViewModels.SuDungMayIndexViewModel

<form method="get" class="card p-3 mb-4 shadow-sm">
    <div class="row g-3">
        <div class="col-md-3">
            <label asp-for="TuNgay" class="form-label">Từ ngày</label>
            <input asp-for="TuNgay" class="form-control" type="date" />
        </div>
        <div class="col-md-3">
            <label asp-for="DenNgay" class="form-label">Đến ngày</label>
            <input asp-for="DenNgay" class="form-control" type="date" />
        </div>
        <div class="col-md-3">
            <label asp-for="MaMay" class="form-label">Máy</label>
            <select asp-for="MaMay" asp-items="Model.DanhSachMay" class="form-select">
                <option value="">-- Tất cả --</option>
            </select>
        </div>
        <div class="col-md-3">
            <label asp-for="MaNguoiDung" class="form-label">Người dùng</label>
            <select asp-for="MaNguoiDung" asp-items="Model.DanhSachNguoiDung" class="form-select">
                <option value="">-- Tất cả --</option>
            </select>
        </div>
    </div>
    <div class="mt-3 text-end">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-filter"></i> Lọc
        </button>
    </div>
</form>

<table class="table table-bordered table-hover">
    <thead class="table-light">
        <tr>
            <th>Người dùng</th>
            <th>Máy</th>
            <th>Bắt đầu</th>
            <th>Kết thúc</th>
            <th>Tổng tiền</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.DanhSachSuDung)
        {
            <tr>
                <td>@item.maNguoiDung</td>
                <td>@item.maMay</td>
                <td>@item.thoiGianBatDau.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.thoiGianKetThuc?.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@item.tongTien</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Sửa</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Chi tiết</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
