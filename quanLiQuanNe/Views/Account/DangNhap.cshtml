@model quanLiQuanNe.Models.nguoiDung
@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow p-4" style="width: 350px; border-radius: 15px;">
        <h3 class="text-center mb-4 font-weight-bold">Đăng nhập</h3>

        <form asp-action="DangNhap" asp-controller="Account" method="post">
            @Html.AntiForgeryToken()

            @if (ViewData.ModelState[""]?.Errors.Count > 0)
            {
                <div class="alert alert-danger">
                    @Html.ValidationSummary(true)
                </div>
            }

            <div class="form-group mb-3">
                <label asp-for="userName" class="form-label">Tên đăng nhập:</label>
                <input asp-for="userName" class="form-control" />
                <span asp-validation-for="userName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="passWord" class="form-label">Mật khẩu:</label>
                <input asp-for="passWord" type="password" class="form-control" />
                <span asp-validation-for="passWord" class="text-danger"></span>
            </div>

            <div class="d-grid mt-4">
                <button type="submit" class="btn btn-primary">Đăng nhập</button>
            </div>

            <div class="text-center mt-3">
                <a asp-action="DangKy" asp-controller="Account">Chưa có tài khoản? Đăng ký ngay</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}