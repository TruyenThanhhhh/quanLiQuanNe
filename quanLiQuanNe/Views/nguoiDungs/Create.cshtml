@model quanLiQuanNe.Models.nguoiDung

@{
    ViewData["Title"] = "Tạo người dùng mới";
}

<style>
    .card-create {
        border-radius: 20px;
        background: #ffffff;
        padding: 30px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        max-width: 550px;
    }

    .btn-custom {
        padding: 10px 20px;
        font-size: 1.1rem;
        border-radius: 10px;
    }

    .form-label {
        font-weight: 600;
    }
</style>

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card-create">
        <h2 class="text-center text-primary mb-4">👤 Tạo người dùng mới</h2>

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="userName" class="form-label">Tên đăng nhập:</label>
                <input asp-for="userName" class="form-control" placeholder="VD: nguyenvana" />
                <span asp-validation-for="userName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="passWord" class="form-label">Mật khẩu:</label>
                <input asp-for="passWord" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                <span asp-validation-for="passWord" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="hoTen" class="form-label">Họ và tên:</label>
                <input asp-for="hoTen" class="form-control" placeholder="VD: Nguyễn Văn A" />
                <span asp-validation-for="hoTen" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="sdt" class="form-label">Số điện thoại:</label>
                <input asp-for="sdt" class="form-control" placeholder="VD: 0123456789" />
                <span asp-validation-for="sdt" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="isAdmin" class="form-check-input" />
                <label asp-for="isAdmin" class="form-check-label">Quyền quản trị</label>
            </div>

            <div class="mb-3">
                <label asp-for="soDu" class="form-label">Số dư (VNĐ):</label>
                <input asp-for="soDu" class="form-control" placeholder="VD: 100000" />
                <span asp-validation-for="soDu" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2 mt-4">
                <button type="submit" class="btn btn-success btn-custom">💾 Lưu người dùng mới</button>
                <a asp-action="Index" class="btn btn-secondary btn-custom">← Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
